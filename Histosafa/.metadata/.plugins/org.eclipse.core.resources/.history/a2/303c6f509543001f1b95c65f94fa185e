spring.application.name=springboot-article-service

#Aplicar puertos automaticamente por la aplicacion y Generar un valor random para eureka.instance-id
server.port=${PORT:0}
eureka.instance.instance-id=${spring.application.name}:${spring.application.instance_id:${random.value}}

#Base de datos
spring.datasource.url=jdbc:mysql://localhost:3306/histosafa
spring.datasource.username=root
spring.datasource.password=1234
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

#Al ejecutar el proyecto, actualizar BD
spring.jpa.hibernate.ddl-auto=update

#Mostrar por consola instrucciones SQL
spring.jpa.show-sql=true

#Indica el servidor de Eureka
eureka.client.serviceUrl.defaultZone=http://localhost:8761/eureka/