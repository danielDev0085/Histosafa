spring.application.name=springboot-cloud-gateway
server.port=8090

#Registrar servicio en Eureka
eureka.client.service-url.defaultzone=http://localhost:8761/eureka

#Registrar rutas de servicios en gateway
spring.cloud.gateway.mvc.routes[0].id=springboot-article-service
spring.cloud.gateway.mvc.routes[0].uri=lb://springboot-article-service
spring.cloud.gateway.mvc.routes[0].predicates=Path=/articles/**
spring.cloud.gateway.mvc.routes[0].filters=StripPrefix=1